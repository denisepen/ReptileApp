<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.android.reptileapp.MainActivity"
    android:background="#f8fda3">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="reptileChoice"
        android:text="Let&apos;s Learn More!"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_dark"
        android:textSize="25sp"
        android:typeface="normal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Reptiles"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="55dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reptiles are beautiful and mysterious creatures. In this app you will learn a few facts about some of your favorite reptiles. If you are still curious to learn more please tap the &quot;More Info&quot; button at the bottom of each page and you will be taken to that animal&apos;s Wikipedia page. "
        android:id="@+id/textView73"
        android:textSize="25sp"
        android:layout_below = "@+id/textView"
        android:layout_above="@id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textAlignment="center"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true" />


</RelativeLayout>
